{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Build Project[macOS/Linux]",
			"command": "buildscript/build.sh",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "Build Project[Windows]",
			"command": "buildscript/build.bat",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	],
}